<%= form_for event do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h3>Sorry! There was a problem saving your event!</h3>
      <ul>
        <% event.errors.messages.each do |attr, errors| %>
          <% errors.each do |error| %>
            <li> <%= attr %> <%= error %> </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
      
  <%= f.label "Event title" %><br>
  <%= f.text_field :title %><br>
      
  <%= f.label "Date" %><br>
  <%= f.date_field :date%><br>
      
  <%= f.label "Start time" %><br>
  <%= f.time_field :start %><br>
      
  <%= f.label "End time" %><br>
  <%= f.time_field :end %><br>
      
  <%= f.label "Location" %><br>
  <%= f.text_field :location %><br>
      
  <%= f.label "Description" %><br>
  <%= f.text_area :description %><br>
  
  Is this event private?
  <%= f.radio_button(:private, true) %>
  <%= f.label "yes" %>
  <%= f.radio_button(:private, false) %>
  <%= f.label "no" %><br>
  
  <%= f.submit "Submit" %>
<% end %>